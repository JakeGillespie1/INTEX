<body onload="gatherLocal();">
    <script>
        // Wait for 3000 milliseconds (3 seconds) before redirecting
        setTimeout(function() {
          location.href = "https://provo.is404.net";
        }, 3000);

        function gatherLocal(){
            let login = localStorage.getItem('login');
            if (login == 'true') {
                localStorage.setItem(
                    'first_name',
                    document.getElementById('first_name_p').textContent
                );
                localStorage.setItem(
                    'last_name',
                    document.getElementById('last_name_p').textContent
                );
                localStorage.setItem(
                    'is_admin',
                    document.getElementById('is_admin_p').textContent
                );
                localStorage.setItem('login', 'false');
            }
        }

      </script>
